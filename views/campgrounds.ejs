<% include partials/header %>

<div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to uCamp</h1>
                <p>View Our Hand-pick campgrounds from all around the nations</p>
                <p>
                        <a class="btn btn-outline-primary btn-lg" href="/campgrounds/new">Add New Camp</a>
                </p>
            </div>
        </header>


        <div class="row">
            <div class="col-lg-12">
                <h3> Our Most Popular Campgrounds</h3>
            </div>
            <div class="row">
                    <% campgrounds.forEach(function(campground){ %>
                        <div class="col-md-4 col-sm-6"> 
                            <div class="card">
                                    <img class="card-img-top" src="<%= campground.image %>" alt=" <%= campground.name %> image "/>
                                    <div class="card-body text-center">
                                            <h4> <%= campground.name %> </h4>
                                    </div>
                            </div>
                        </div>
            
                    <%  }); %>

            </div>
        </div>
        
       

<% include partials/footer %>